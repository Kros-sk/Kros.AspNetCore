<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp3.0</TargetFramework>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Version>1.1.0-alpha.1</Version>
    <Authors>KROS a.s.</Authors>
    <Company>KROS a.s.</Company>
    <Description>Simpler configuration of MassTransit library.</Description>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageIconUrl>https://en.gravatar.com/userimage/137934964/524e95fbd8c2e8779e02819ab6902bef.png</PackageIconUrl>
    <PackageTags>kros;masstransit;azure;service bus;</PackageTags>
